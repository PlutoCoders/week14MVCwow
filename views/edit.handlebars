<div>
  <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Post Title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="project-desc">Post Content:</label>
        <textarea class="form-input" id="project-desc" name="project-desc">{{body}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
         <button type="click" id="del-button" data-id="{{id}}" class="btn btn-danger">Delete</button>
        <input type="hidden" id="post-value" value="{{id}}"/>
        
</div>

<script src="/js/edit.js"></script>